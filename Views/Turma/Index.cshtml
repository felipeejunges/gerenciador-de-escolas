@model IEnumerable<gerenciador_de_escolas.ViewModels.TurmaViewModel>
@{
    ViewData["Title"] = "Turma";
}
<div class="row">
        <div class="container center-align">
            <table class="striped">
                <thead>
                    <tr>
                        <th>Ano</th>
                        <th>Nome</th>
                        <th>Escola</th>
                        <th>Ações</th>
                    </tr>
                </thead>

                <tbody>
                     @foreach(var viewModel in @Model)
                    {
                        <tr>
                            <td>
                                @viewModel.ano
                            </td>
                            <td>
                                @viewModel.nome
                            </td>
                            <td>
                                @viewModel.escolaNome
                            </td>
                            <td>
                                <a href="/Turma/Form/@viewModel.id" class="btn blue">Editar</a>
                                <a asp-action="Remove" asp-route-id="@viewModel.id" class="btn red"
                                asp-controller="Turma" data-ajax="true" data-ajax-method="POST"
                                data-ajax-success="window.location = '/Turma'"              
                                asp-anti-forgery>Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    }