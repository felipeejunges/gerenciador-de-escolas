@model gerenciador_de_escolas.ViewModels.TurmaViewModel
@using gerenciador_de_escolas.ViewModels
@{
    ViewData["Title"] = "Turma";
}
<div class="row">
    <div class="container center-align">
        <span class="title-view blue-text text-darken-2">Cadastro de Turma</span>
    </div>  
</div>
<div class="row">
        <form id="form" asp-action="Form" asp-controller="Turma"
            data-ajax="true" data-ajax-method="POST" data-ajax-failure="formOnFail" 
            data-ajax-success="window.location = '/Turma'"              
            asp-anti-forgery>
            <div class="container">
                <div class="row">
                     <input type="hidden" asp-for="id">
                    <div class="input-field col s2">
                        <input asp-for="ano" class="validate">
                        <label for="ano">Ano</label>
                        <span asp-validation-for="ano" class="red-text"></span>
                    </div>
                    <div class="input-field col s10">
                        <input asp-for="nome" class="validate">
                        <label for="nome">Nome</label>
                        <span asp-validation-for="nome" class="red-text"></span>
                    </div>
                    <div class="input-field col s12">
                        <select asp-for="escolaId" 
                        asp-items='@(new SelectList(@Model.escolas,"id","nome"))'>
                        </select>
                        <label>Escolas</label>
                        <span asp-validation-for="escolaId" class="red-text"></span>
                    </div>
                </div>
                <div class="row right-align">
                    <button type="reset" class="waves-effect waves-light btn red">Limpar</button>
                    <button type="submit" class="waves-effect waves-light btn green">Enviar</button>
                </div>
            </div>

        </form>
    </div>
@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
     <script src="/js/form.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('select').formSelect();
        });
    </script>
}